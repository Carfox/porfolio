---
import GitHub from "./icons/GitHub.astro"
import Angular from "./icons/Angular.astro"
import Tailwind from "./icons/Tailwind.astro"
import Firebase from "./icons/Firebase.astro"
import Link from "./icons/Link.astro"
import Flask from "./icons/Flask.astro"
import Tensorflow from "./icons/TensorFlow.astro"
import Azure from "./icons/Azure.astro"
import LinkButton from "./LinkButton.astro"

const TAGS = {
  ANGULAR: {
    name: "Angular",
    class: "bg-gradient-to-r from-[#dd3656] from-10% via-[#d42e68] via-30% to-[#7d20e8] to-90% text-white",
    icon: Angular,
  },
  FLASK: {
    name: "Flask",
    class: "bg-[#181818] text-white",
    icon: Flask,
  },
  TENSORFLOW: {
    name: "TensorFlow",
    class: "bg-[#a0511f] text-white",
    icon: Tensorflow,
  },
  AZURE: {
    name: "Azure",
    class: "bg-[#0f1a24] text-white",
    icon: Azure,
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
  FIREBASE: {
    name: "Firebase",
    class: "bg-[#ac6527] text-white",
    icon: Firebase,
  },
}
const PROJECTS = [
  {
    title: "CIBIA XIV",
    description:
      "Pagina web para el registro, pago y gestion de asistentes de una conferencia internacional",
    link: "https://cibia-b13fe.web.app/registro",
    image: "/projects/cibia2.webp",
    tags: [TAGS.ANGULAR, TAGS.FIREBASE],
  },
  {
    title: "CARPIA",
    description:
      "Proyecto de Inteligencia Artificial aplicando CNN a un auto que interact√∫a mediante reconocimiento de gestos de las manos.",
    github: "https://github.com/carfox/carpia",
    image: "/projects/carpia3.webp",
    tags: [TAGS.FLASK, TAGS.TENSORFLOW, TAGS.AZURE],
  },
]
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
    <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
  <div class="w-full md:w-1/2">
    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
      <img alt="Captura de proyecto" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
    </div>
  </div>

  <div class="w-full md:w-1/2 md:max-w-lg">
    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
      {title}
    </h3>
    <div class="flex flex-wrap mt-2">
      <ul class="flex flex-row mb-2 gap-x-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>

      <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
      <footer class="flex items-end justify-start mt-4 gap-x-4">
          {github && (
            <LinkButton href={github}>
              <GitHub class="size-6" />
              Code
              
            </LinkButton>
          )}
          {link && (
            <LinkButton href={link}>
              <Link class="size-4" />
              Preview
            </LinkButton>
          )}
        </footer>
    </div>
  </div>
</article>
    ))
  }
</div>



